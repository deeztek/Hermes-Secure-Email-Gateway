SOURCEDIR=/var/lib/fangfrisch/signatures
TARGETDIR=/var/lib/clamav

needreload=0
cd $SOURCEDIR || exit 1
for db in *
do
	if [ ! -f "$TARGETDIR/$db" ] || [ "$SOURCEDIR/$db" -nt "$TARGETDIR/$db" ]
	then
		if [ -f "$TARGETDIR/$db" ]
		then
			oldcs=$(sha256sum "$SOURCEDIR/$db" | cut -d' ' -f1,1)
			newcs=$(sha256sum "$TARGETDIR/$db" | cut -d' ' -f1,1)
			if [ "$oldcs" = "$newcs" ]
			then
				continue
			fi
		fi
		clamscan -d "$SOURCEDIR/$db" /proc/cmdline > /dev/null 2>&1
		if [ $? -ne 2 ]
		then
			cp "$SOURCEDIR/$db" "$TARGETDIR"
			needreload=1
		else rm "$SOURCEDIR/$db"
		fi
	fi
done
if [ $needreload -eq 1 ] && [ -f /run/clamav/clamd.ctl ]
then
	clamdscan --reload
fi
